<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:endColor="#0BC8FF"
                android:startColor="#1E76F1"
                android:type="linear" />
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <!--<corners android:radius="@dimen/dip_20" />-->
            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <padding android:bottom="@dimen/dip_8" android:left="@dimen/dip_8" android:right="@dimen/dip_8" android:top="@dimen/dip_8" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <!-- 填充的颜色 -->
            <gradient
                android:angle="270"
                android:endColor="#1E76F1"
                android:startColor="#0BC8FF"
                android:type="linear" />

            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <!--<corners android:radius="@dimen/dip_20" />-->
            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <padding android:bottom="@dimen/dip_8" android:left="@dimen/dip_8" android:right="@dimen/dip_8" android:top="@dimen/dip_8" />
        </shape>
    </item>
</selector>