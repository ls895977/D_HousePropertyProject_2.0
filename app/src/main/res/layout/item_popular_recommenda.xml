<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dip_145"
    android:layout_marginLeft="@dimen/dip_10"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingRight="@dimen/dip_5">

    <ImageView
        android:id="@+id/home_img"
        android:layout_width="@dimen/dip_160"
        android:layout_height="@dimen/dip_120"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@mipmap/icon_test3" />

    <TextView
        android:id="@+id/home_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dip_25"
        android:layout_gravity="center"
        android:paddingTop="@dimen/dip_5"
        android:text="三百峰 1室1厅"
        android:textColor="@color/min_color"
        android:textSize="@dimen/fond_14sp"
        android:textStyle="bold" />
</LinearLayout>
