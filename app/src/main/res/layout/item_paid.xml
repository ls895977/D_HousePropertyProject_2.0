<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_apptment_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dip_10">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_0.1"
        android:background="#E5E5E5" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_70"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dip_10">

        <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/my_item_hader"
            android:layout_width="@dimen/dip_60"
            android:layout_height="@dimen/dip_60"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_test"
            app:riv_corner_radius="@dimen/dip_3"
            app:riv_mutate_background="true"
            app:riv_oval="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dip_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/dip_10"
                    android:background="@drawable/houseinspectionchilde_bg3"
                    android:paddingLeft="@dimen/dip_5"
                    android:paddingTop="@dimen/dip_1"
                    android:paddingRight="@dimen/dip_5"
                    android:paddingBottom="@dimen/dip_1"
                    android:text="已付款"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fond_9sp" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="三百峰一期2019年11月11日团"
                    android:textColor="@color/min_color"
                    android:textSize="@dimen/fond_14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/zhiyeguwen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:paddingTop="@dimen/dip_5"
                android:text="置业顾问：张三"
                android:textColor="#A5A5A5"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/item_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系方式："
                android:textColor="#A5A5A5"
                android:textSize="@dimen/fond_12sp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dip_15"
        android:paddingLeft="@dimen/dip_10">

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/min_color"
            android:textSize="@dimen/dip_13" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:paddingRight="@dimen/dip_10">
            <TextView
                android:id="@+id/item_PAID_evaluate"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dip_20"
                android:background="@drawable/oder_boder"
                android:gravity="center"
                android:layout_marginRight="@dimen/dip_10"
                android:paddingLeft="@dimen/dip_10"
                android:paddingRight="@dimen/dip_10"
                android:text="评价顾问"
                android:textColor="@drawable/oder_fond_selecte"
                android:textSize="@dimen/fond_12sp" />
            <TextView
                android:id="@+id/item_PAID_GUWEN"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dip_20"
                android:layout_marginLeft="@dimen/dip_10"
                android:layout_marginRight="@dimen/dip_10"
                android:background="@drawable/oder_boder"
                android:gravity="center"
                android:paddingLeft="@dimen/dip_10"
                android:paddingRight="@dimen/dip_10"
                android:text="联系顾问"
                android:textColor="@drawable/oder_fond_selecte"
                android:textSize="@dimen/fond_12sp" />

            <TextView
                android:id="@+id/item_PAID_cancel"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dip_20"
                android:visibility="gone"
                android:background="@drawable/oder_boder"
                android:gravity="center"
                android:paddingLeft="@dimen/dip_10"
                android:paddingRight="@dimen/dip_10"
                android:text="申请退款"
                android:textColor="@drawable/oder_fond_selecte"
                android:textSize="@dimen/fond_12sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
