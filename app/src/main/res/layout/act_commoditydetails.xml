<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/dip_60">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_300" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¥"
                            android:textColor="#FFF44619"
                            android:textSize="@dimen/fond_10sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1400"
                            android:textColor="#FFF44619"
                            android:textSize="@dimen/fond_20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/dip_2"
                            android:text="/桶"
                            android:textColor="#FFF44619"
                            android:textSize="@dimen/fond_10sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dip_10"
                            android:background="#FFFF8070"
                            android:gravity="center"
                            android:paddingLeft="@dimen/dip_5"
                            android:paddingTop="@dimen/dip_1"
                            android:paddingRight="@dimen/dip_5"
                            android:paddingBottom="@dimen/dip_1"
                            android:text="12:12后恢复原价"
                            android:textColor="@color/white"
                            android:textSize="@dimen/fond_9sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/salePrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="市场价:1600/桶"
                        android:textColor="#FF999999"
                        android:textSize="@dimen/fond_9sp" />
                </LinearLayout>


                <TextView
                    android:id="@+id/shopping_zan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shoping_zan" />
            </RelativeLayout>

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:padding="@dimen/dip_10"
                android:text="甲烷气瓶焊便携式烘焙火枪喷火枪烧烤户外引火棒卡式喷火器炉气罐"
                android:textColor="@color/min_color"
                android:textSize="@dimen/fond_16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_10"
                android:layout_marginTop="@dimen/dip_10"
                android:background="#FFF9F9F9" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dip_10"
                android:layout_marginBottom="@dimen/dip_10"
                android:src="@mipmap/icon_fuwubaozhang" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_0.1"
                android:layout_marginLeft="@dimen/dip_10"
                android:layout_marginTop="@dimen/dip_5"
                android:layout_marginRight="@dimen/dip_10"
                android:background="#FFB9B9B9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:text="产品详情"
                android:textColor="@color/min_color"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/imageRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:text="参数规格"
                android:textColor="@color/min_color"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/GuiGeRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_45"
        android:layout_marginTop="@dimen/dip_20">

        <ImageView
            android:id="@+id/consultation_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dip_10"
            android:paddingTop="@dimen/dip_10"
            android:paddingRight="@dimen/dip_20"
            android:paddingBottom="@dimen/dip_10"
            android:src="@mipmap/icon_blck_back" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_60"
        android:layout_alignParentBottom="true"
        android:background="@color/white">
        <TextView
            android:id="@+id/but_commit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_35"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dip_20"
            android:layout_marginRight="@dimen/dip_20"
            android:background="@drawable/home_bt_bg"
            android:gravity="center"
            android:text="立即购买"
            android:textColor="@color/white"
            android:textSize="@dimen/fond_16sp" />
    </RelativeLayout>
</RelativeLayout>
