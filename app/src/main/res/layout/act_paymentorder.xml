<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_45"
            android:layout_marginTop="@dimen/dip_20">

            <ImageView
                android:id="@+id/PaymentOrder_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/dip_10"
                android:paddingBottom="@dimen/dip_10"
                android:paddingRight="@dimen/dip_20"
                android:paddingTop="@dimen/dip_10"
                android:src="@mipmap/icon_blck_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/PaymentOrder_name"
                android:textColor="@color/min_color"
                android:textSize="@dimen/fond_21sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dip_30"
            android:gravity="center"
            android:text="本次支付为购房意向金"
            android:textColor="@color/min_color"
            android:textSize="@dimen/fond_16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dip_10"
            android:padding="@dimen/dip_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号"

                android:textColor="@color/min_color"
                android:textSize="@dimen/fond_16sp" />

            <TextView
                android:id="@+id/id_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text=" "
                android:textColor="@color/min_color"
                android:textSize="@dimen/fond_16sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_05"
            android:layout_marginLeft="@dimen/dip_10"
            android:layout_marginRight="@dimen/dip_10"
            android:background="#E5E5E5" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dip_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待付款"
                android:textColor="@color/min_color"
                android:textSize="@dimen/fond_16sp" />

            <TextView
                android:id="@+id/tv_EarnestRmbPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="￥0.00"
                android:textColor="#EE174A"
                android:textSize="@dimen/fond_16sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/dip_10"
            android:text="请选择支付方式" />

        <RelativeLayout
            android:id="@+id/rl_zhifubao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dip_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_zhifubao"
                android:drawablePadding="@dimen/dip_10"
                android:gravity="center"
                android:text="支付宝"
                android:textColor="@color/min_color"
                android:textSize="@dimen/fond_16sp" />

            <ImageView
                android:id="@+id/cb_zhifubao"
                android:layout_width="@dimen/dip_15"
                android:layout_height="@dimen/dip_15"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dip_10"
                android:src="@drawable/cb_tab"

                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_05"
            android:layout_marginLeft="@dimen/dip_40"
            android:background="#E5E5E5" />

        <RelativeLayout
            android:id="@+id/rl_weixin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dip_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_weixinzhifu"
                android:drawablePadding="@dimen/dip_10"
                android:text="微信"
                android:textColor="@color/min_color"
                android:textSize="@dimen/fond_16sp" />

            <ImageView
                android:id="@+id/cb_weixin"
                android:layout_width="@dimen/dip_15"
                android:layout_height="@dimen/dip_15"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dip_10"
                android:src="@drawable/cb_tab"
                />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/paymentorder_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/pf_style"
        android:gravity="center"
        android:paddingTop="@dimen/dip_15"
        android:paddingBottom="@dimen/dip_15"
        android:text="确认支付"
        android:textColor="@color/white"
        android:textSize="@dimen/fond_16sp" />
</RelativeLayout>