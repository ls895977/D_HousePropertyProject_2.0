<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_45"
        android:layout_marginTop="@dimen/dip_20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/Cashier_name"
            android:textColor="@color/min_color"
            android:textSize="@dimen/fond_21sp" />

        <ImageView
            android:id="@+id/Cashier_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dip_10"
            android:src="@mipmap/icon_min_contact_customer_service" />
    </RelativeLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_lose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dip_70"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/icon_eero" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dip_20"
            android:text="订单支付失败"
            android:textColor="@color/min_color"
            android:textSize="@dimen/fond_19sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dip_10"
            android:gravity="center"
            android:text="您的支付宝余额不足，请重新支付" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_Success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dip_70"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/icon_success" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dip_20"
            android:text="订单支付成功"
            android:textColor="@color/min_color"
            android:textSize="@dimen/fond_19sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dip_70"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Cashier_home"
            android:layout_width="@dimen/dip_110"
            android:layout_height="@dimen/dip_35"
            android:background="@drawable/cashier_boder"
            android:gravity="center"
            android:text="返回首页"
            android:textColor="@drawable/oder_fond_selecte"
            android:textSize="@dimen/fond_16sp" />

        <TextView
            android:id="@+id/Cashier_oder"
            android:layout_width="@dimen/dip_110"
            android:layout_marginLeft="@dimen/dip_20"
            android:layout_height="@dimen/dip_35"
            android:background="@drawable/cashier_boder"
            android:gravity="center"
            android:text="查看订单"
            android:textColor="@drawable/oder_fond_selecte"
            android:textSize="@dimen/fond_16sp" />
    </LinearLayout>
</LinearLayout>
