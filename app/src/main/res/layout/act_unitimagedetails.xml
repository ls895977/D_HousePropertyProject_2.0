<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/min_color">
    <android.support.v4.view.ViewPager
        android:id="@+id/UnitImageDetails_ViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />
    <RelativeLayout
        android:id="@+id/UnitImageDetails_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dip_20">

        <ImageView
            android:id="@+id/UnitImageDetails_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dip_10"
            android:src="@mipmap/icon_wihtback" />

        <TextView
            android:id="@+id/UnitImageDetails_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="1/256"
            android:textColor="@color/white"
            android:textSize="@dimen/fond_18sp" />
    </RelativeLayout>
    <com.flyco.tablayout.SlidingTabLayout
        android:layout_below="@+id/UnitImageDetails_title"
        android:id="@+id/UnitImageDetails_SlidingTabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_40"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        tl:tl_indicator_color="#FFFEFE"
        tl:tl_indicator_corner_radius="3dp"
        tl:tl_indicator_style="BLOCK"
        tl:tl_textSelectColor="@color/min_color"
        tl:tl_textUnselectColor="#B0B0B0" />
</RelativeLayout>
