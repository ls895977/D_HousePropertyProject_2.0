<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dip_50"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_45"
                android:layout_marginTop="@dimen/dip_20">

                <ImageView
                    android:id="@+id/OrderDetails_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/dip_10"
                    android:paddingTop="@dimen/dip_10"
                    android:paddingRight="@dimen/dip_20"
                    android:paddingBottom="@dimen/dip_10"
                    android:src="@mipmap/icon_blck_back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="@string/OrderDetails_name"
                    android:textColor="@color/min_color"
                    android:textSize="@dimen/fond_21sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_0.1"
                android:background="#c8c8c8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dip_20"
                    android:orientation="horizontal"
                    android:padding="@dimen/dip_10">

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="订单号："
                        android:textColor="@color/min_color"
                        android:textSize="@dimen/fond_14sp" />

                    <TextView
                        android:id="@+id/id_order"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="213412341234123412341234234"
                        android:textColor="@color/min_color"
                        android:textSize="@dimen/fond_14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dip_10">

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="下单时间："
                        android:textColor="@color/min_color"
                        android:textSize="@dimen/fond_14sp" />

                    <TextView
                        android:id="@+id/time_created"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="@color/min_color"
                        android:textSize="@dimen/fond_14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/fond_14sp">

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="订单状态："
                        android:textColor="@color/min_color"
                        android:textSize="@dimen/fond_14sp" />

                    <TextView
                        android:id="@+id/status"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="#EA1A27"
                        android:textSize="@dimen/fond_14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dip_10">

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="下单账号："
                        android:textColor="@color/min_color"
                        android:textSize="@dimen/fond_14sp" />

                    <TextView
                        android:id="@+id/num_order"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="@color/min_color"
                        android:textSize="@dimen/fond_14sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip_10"
                    android:layout_marginTop="@dimen/dip_20"
                    android:text="商品信息："
                    android:textColor="@color/min_color"
                    android:textSize="@dimen/fond_14sp"
                    android:textStyle="bold" />
                    <TextView
                        android:id="@+id/name_p"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dip_20"
                        android:singleLine="true"
                        android:layout_marginRight="@dimen/dip_10"
                        android:textColor="@color/min_color"
                        android:textSize="@dimen/fond_14sp"
                       />
                </LinearLayout>
                <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/oader_img"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dip_160"
                    android:layout_marginLeft="@dimen/dip_10"
                    android:layout_marginTop="@dimen/dip_10"
                    android:layout_marginRight="@dimen/dip_10"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/icon_test"
                    app:riv_corner_radius="@dimen/dip_8"
                    app:riv_mutate_background="true"
                    app:riv_oval="false" />

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dip_10"
                    android:padding="@dimen/dip_10"
                    android:text="三百峰一期"
                    android:textColor="@color/min_color"
                    android:textSize="@dimen/fond_20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dip_10">

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="房型："
                            android:textColor="@color/min_color"
                            android:textSize="@dimen/fond_13sp" />

                        <TextView
                            android:id="@+id/fanghao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dip_10"
                            android:maxLength="4"
                            android:paddingLeft="@dimen/dip_10"
                            android:textColor="#121314"
                            android:textSize="@dimen/fond_13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="阳台面积："
                            android:textColor="@color/min_color"
                            android:textSize="@dimen/fond_13sp" />

                        <TextView
                            android:id="@+id/yangtai"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dip_10"
                            android:paddingLeft="@dimen/dip_10"
                            android:textColor="#121314"
                            android:textSize="@dimen/fond_13sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dip_10">

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="室内面积："
                            android:textColor="@color/min_color"
                            android:textSize="@dimen/fond_13sp" />

                        <TextView
                            android:id="@+id/mianji"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dip_10"
                            android:textColor="#121314"
                            android:textSize="@dimen/fond_13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="土地面积："
                            android:textColor="@color/min_color"
                            android:textSize="@dimen/fond_13sp" />

                        <TextView
                            android:id="@+id/mianji1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dip_10"
                            android:paddingLeft="@dimen/dip_10"
                            android:textColor="#121314"
                            android:textSize="@dimen/fond_13sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dip_10">

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="房屋价格："
                            android:textColor="@color/min_color"
                            android:textSize="@dimen/fond_13sp" />

                        <TextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#4B95FF"
                            android:textSize="@dimen/fond_16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="房屋订金："
                            android:textColor="@color/min_color"
                            android:textSize="@dimen/fond_13sp" />

                        <TextView
                            android:id="@+id/dingjia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dip_10"
                            android:paddingLeft="@dimen/dip_10"
                            android:textColor="#121314"
                            android:textSize="@dimen/fond_13sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/ll_buttom_status3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_50"
        android:layout_alignParentBottom="true"
        android:background="#5C96FF"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:paddingTop="@dimen/dip_5"
            android:text="联系置业顾问"
            android:textColor="@color/white"
            android:textSize="@dimen/fond_18sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_buttom_status1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_50"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/onlinebooking"
            android:layout_width="0dip"
            android:layout_height="@dimen/dip_50"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="联系置业顾问"
            android:textColor="#50121314"
            android:textSize="@dimen/fond_16sp" />

        <TextView
            android:id="@+id/concel_odr"
            android:layout_width="0dip"
            android:layout_height="@dimen/dip_50"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="取消订单"
            android:textColor="#50121314"
            android:textSize="@dimen/fond_16sp" />

        <LinearLayout
            android:id="@+id/daifukuan"
            android:layout_width="0dip"
            android:layout_height="@dimen/dip_50"
            android:layout_weight="1"
            android:background="@drawable/pf_style"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="@dimen/dip_10"
                android:text="付定金"
                android:textColor="@color/white"
                android:textSize="@dimen/fond_16sp" />
            <TextView
                android:id="@+id/oder_Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="（剩余0:0）"
                android:textColor="#80FFFFFF"
                android:textSize="@dimen/fond_9sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_buttom_status2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_50"
        android:layout_alignParentBottom="true"
        android:background="#30121314"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/odredetaile_tuikuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="@dimen/dip_5"
            android:text="已退款：10000"
            android:textColor="@color/white"
            android:textSize="@dimen/fond_18sp" />

        <TextView
            android:id="@+id/odredetaile_zhifu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="支付："
            android:textColor="@color/white"
            android:textSize="@dimen/fond_12sp" />
    </LinearLayout>
</RelativeLayout>