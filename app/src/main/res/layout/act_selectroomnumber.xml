<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_45"
            android:layout_marginTop="@dimen/dip_20">

            <ImageView
                android:id="@+id/SelectRoomNumber_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/dip_10"
                android:paddingBottom="@dimen/dip_10"
                android:paddingRight="@dimen/dip_20"
                android:paddingTop="@dimen/dip_10"
                android:src="@mipmap/icon_blck_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/SelectRoomNumber_name"
                android:textColor="@color/min_color"
                android:textSize="@dimen/fond_21sp" />

            <ImageView
                android:id="@+id/SelectRoomNumber_shaixuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/dip_10"
                android:src="@mipmap/icon_shaixuan" />
        </RelativeLayout>
        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/SelectRoomNumber_refreshLayout"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/dip_50"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/SelectRoomNumberl_RecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/SelectRoomNumber_NextStep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/pf_style"
        android:gravity="center"
        android:paddingTop="@dimen/dip_15"
        android:paddingBottom="@dimen/dip_15"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />
</RelativeLayout>