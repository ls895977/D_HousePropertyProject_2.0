<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dip_60"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dip_20"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:src="@mipmap/icon_wuliudtop" />

        <ImageView
            android:layout_width="@dimen/dip_2"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#D8D8D8" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="07-14  10:10"
            android:textColor="#D8D8D8"
            android:textSize="@dimen/fond_9sp" />

        <TextView
            android:id="@+id/tv_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="物流已签收"
            android:textColor="#D8D8D8"
            android:textSize="@dimen/fond_12sp" />
    </LinearLayout>
</LinearLayout>
