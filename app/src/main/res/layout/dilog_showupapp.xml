<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white"
    xmlns:custom="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/dip_30"
    android:layout_marginRight="@dimen/dip_30"
    android:background="@drawable/dlog_testing_time"
    android:orientation="vertical"
    android:padding="@dimen/dip_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="@dimen/dip_10"
            android:text="更新提醒"
            android:textColor="#000000"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/upapp_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/dip_10"
            android:paddingTop="@dimen/dip_10"
            android:text="服务器端存在最新app"
            android:textColor="#000000"
            android:textSize="@dimen/sp_16" />
        <com.daimajia.numberprogressbar.NumberProgressBar
            android:id="@+id/number_progress_bar"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/dip_20"
            android:layout_marginBottom="@dimen/dip_20"
            app:progress_reached_bar_height="@dimen/dip_5"
            app:progress_unreached_bar_height="@dimen/dip_3"
            app:progress_reached_color="#61B3F8"
            app:progress_text_color="#61B3F8"
            style="@style/NumberProgressBar_Warning_Red"
            custom:progress_current="80"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dip_10"
        android:gravity="center">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="@dimen/dip_110"
            android:layout_height="@dimen/dip_40"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dip_10"
            android:gravity="center"
            android:paddingLeft="@dimen/dip_10"
            android:text="取消"
            android:textColor="#ABABAB"
            android:textSize="@dimen/fond_19sp" />

        <TextView
            android:id="@+id/center"
            android:layout_width="@dimen/dip_110"
            android:layout_height="@dimen/dip_40"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dip_10"
            android:background="@drawable/testing_bg"
            android:gravity="center"
            android:paddingRight="@dimen/dip_10"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/fond_19sp" />
    </LinearLayout>
</LinearLayout>
