<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_45"
        android:layout_marginTop="@dimen/dip_20">

        <ImageView
            android:id="@+id/Cash_WithdrawalSuccess_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/dip_10"
            android:src="@mipmap/icon_blck_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/myWallet_name"
            android:textColor="@color/min_color"
            android:textSize="@dimen/fond_21sp" />

        <TextView
            android:id="@+id/mywallet_bill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dip_10"
            android:text="账单"
            android:textColor="@color/min_color"
            android:textSize="@dimen/fond_16sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_180"
        android:layout_marginLeft="@dimen/dip_10"
        android:layout_marginTop="@dimen/dip_30"
        android:layout_marginRight="@dimen/dip_10"
        android:background="@drawable/mywallet_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dip_30"
            android:text="账户余额(元)"
            android:textColor="@color/white"
            android:textSize="@dimen/fond_13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="30000.00"
            android:textColor="@color/white"
            android:textSize="@dimen/fond_39sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_0.1"
            android:layout_marginLeft="@dimen/dip_10"
            android:layout_marginTop="@dimen/dip_20"
            android:layout_marginRight="@dimen/dip_10"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dip_15"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mywallet_Bank_card"
                android:layout_width="@dimen/dip_110"
                android:layout_height="@dimen/dip_35"
                android:layout_marginLeft="@dimen/dip_20"
                android:background="@drawable/mywallet_boder"
                android:gravity="center"
                android:text="银行卡"
                android:textColor="@color/white"
                android:textSize="@dimen/fond_16sp" />
            <TextView
                android:id="@+id/mywallet_Cash_withdrawal"
                android:layout_width="@dimen/dip_110"
                android:layout_height="@dimen/dip_35"
                android:background="@drawable/mywallet_bg_boder"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dip_20"
                android:text="提现"
                android:textColor="#5C96FF"
                android:textSize="@dimen/fond_16sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
