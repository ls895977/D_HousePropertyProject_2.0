<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dip_30"
    android:layout_marginRight="@dimen/dip_30"
    android:background="@drawable/white_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/call_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="@dimen/dip_25"
        android:paddingBottom="@dimen/dip_25"
        android:text="您确定要取消该订单么？"
        android:textColor="@color/gray_dark"
        android:textSize="@dimen/fond_14sp" />

    <View style="@style/com_line" />

    <EditText
        android:id="@+id/oder_liyou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:textSize="@dimen/fond_14sp"
        android:hint="请输入您取消订单的理由"
        android:padding="@dimen/dip_10" />

    <View style="@style/com_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dip_15"
            android:text="确认"
            android:textColor="@color/min_color"
            android:textSize="@dimen/fond_14sp" />

        <View style="@style/vertical_line" />

        <TextView
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dip_15"
            android:text="取消"
            android:textColor="@color/min_color"
            android:textSize="@dimen/fond_14sp" />
    </LinearLayout>
</LinearLayout>