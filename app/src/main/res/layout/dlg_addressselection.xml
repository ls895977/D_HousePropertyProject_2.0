<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dip_300"
    android:background="#f0f0f0"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dip_10"
            android:text="取消"
            android:textColor="#c0c0c0"
            android:textSize="@dimen/fond_16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="请选择门店地址"
            android:textColor="@color/min_color"
            android:textSize="@dimen/fond_16sp" />

        <TextView
            android:id="@+id/center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dip_10"
            android:text="确认"
            android:textColor="@color/min_color"
            android:textSize="@dimen/fond_16sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_province"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/min_color"
                    android:padding="@dimen/dip_10"
                    android:text="请选择"
                    android:textSize="@dimen/fond_14sp" />

                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="0dip"
                    android:textColor="@color/min_color"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/dip_10"
                    android:text="请选择"
                    android:textSize="@dimen/fond_14sp" />

                <TextView
                    android:id="@+id/tv_area"
                    android:layout_width="0dip"
                    android:textColor="@color/min_color"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/dip_10"
                    android:text="请选择"
                    android:textSize="@dimen/fond_14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/RecyclerView_province"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="省"
                    android:textSize="@dimen/fond_14sp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/RecyclerView_city"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="市"
                    android:textSize="@dimen/fond_14sp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/RecyclerView_area"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="区"
                    android:textSize="@dimen/fond_14sp" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>
