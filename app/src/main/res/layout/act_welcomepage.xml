<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <android.support.v4.view.ViewPager
        android:id="@+id/myViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/start_Main"
        android:layout_width="@dimen/dip_150"
        android:layout_height="@dimen/dip_45"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dip_40"
        android:background="@drawable/mywallet_boder"
        android:gravity="center"
        android:text="立即进入"
        android:textColor="@color/white"
        android:textSize="@dimen/fond_16sp"
        android:visibility="gone" />
    <LinearLayout
        android:id="@+id/ll_Main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dip_40"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tab1"
            android:layout_width="@dimen/dip_10"
            android:layout_height="@dimen/dip_10"
            android:background="@drawable/welcome_yuandain"
            android:padding="@dimen/dip_10" />

        <TextView
            android:id="@+id/tab2"
            android:layout_width="@dimen/dip_10"
            android:layout_height="@dimen/dip_10"
            android:layout_marginLeft="@dimen/dip_10"
            android:background="@drawable/welcome_yuandain"
            android:padding="@dimen/dip_10" />

        <TextView
            android:id="@+id/tab3"
            android:layout_width="@dimen/dip_10"
            android:layout_height="@dimen/dip_10"
            android:layout_marginLeft="@dimen/dip_10"
            android:background="@drawable/welcome_yuandain"
            android:padding="@dimen/dip_10" />
    </LinearLayout>
</RelativeLayout>
