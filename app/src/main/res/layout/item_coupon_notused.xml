<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_110"
        android:background="@mipmap/icon_notuse"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dayang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textSize="@dimen/fond_18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2000"
                    android:textSize="@dimen/fond_39sp" />

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="商品优惠券"
                    android:textColor="#5F5F5F"
                    android:textSize="@dimen/fond_10sp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="5">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_weight="5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/suitable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="满10000元可使用"
                    android:textColor="@color/min_color"
                    android:textSize="@dimen/fond_16sp" />

                <TextView
                    android:id="@+id/timeOverdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dip_5"
                    android:text="有效期至 2019.11.11   23:59"
                    android:textColor="#5F5F5F"
                    android:textSize="@dimen/fond_9sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_coupon_notused_but"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dip_20"
                android:background="@drawable/coupon_no_style"
                android:paddingLeft="@dimen/dip_5"
                android:paddingTop="@dimen/dip_3"
                android:paddingRight="@dimen/dip_5"
                android:paddingBottom="@dimen/dip_3"
                android:text="可使用"
                android:textColor="@color/white"
                android:textSize="@dimen/dip_13" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
