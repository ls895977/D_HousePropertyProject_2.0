<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.01dp"
        android:layout_marginLeft="@dimen/dip_10"
        android:layout_marginRight="@dimen/dip_10"
        android:background="#c0c0c0" />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/my_historical_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_10"
        android:layout_marginRight="@dimen/dip_10"
        android:paddingRight="@dimen/dip_10"
        android:paddingLeft="@dimen/dip_10"
        android:paddingTop="@dimen/dip_5"
        android:paddingBottom="@dimen/dip_5"
        android:background="@drawable/number_llcb"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="1栋1单元205"
                android:textColor="@drawable/home_item_1"
                android:textSize="@dimen/fond_14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_fuhao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:text="¥"
                    android:textColor="@drawable/home_item_tv2"
                    android:textSize="@dimen/fond_14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="105"
                    android:textColor="@drawable/home_item_tv2"
                    android:textSize="@dimen/fond_21sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="万"
                    android:textColor="@drawable/home_item_tv2"
                    android:textSize="@dimen/fond_15sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_context"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1栋1单元205"
                android:textColor="@drawable/home_item_tv1"
                android:textSize="@dimen/fond_14sp" />

            <TextView
                android:id="@+id/item_taiguo_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@drawable/home_item_tv1"
                android:textSize="@dimen/fond_10sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>