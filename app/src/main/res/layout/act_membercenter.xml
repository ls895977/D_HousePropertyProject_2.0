<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_45"
            android:layout_marginTop="@dimen/dip_20">

            <ImageView
                android:id="@+id/min_Historical_Record_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/dip_10"
                android:src="@mipmap/icon_blck_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="会员中心"
                android:textColor="@color/min_color"
                android:textSize="@dimen/fond_21sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_vipcenterbg" />

            <LinearLayout
                android:id="@+id/ll_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dip_40"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="金牌会员"
                    android:textColor="#000000"
                    android:textSize="@dimen/fond_22sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="您当前会员等级"
                    android:textColor="#000000"
                    android:textSize="@dimen/fond_10sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_noVip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dip_40"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="您还未加入会员"
                    android:textColor="#000000"
                    android:textSize="@dimen/fond_22sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/addHuiYuan"
                    android:layout_width="@dimen/dip_80"
                    android:layout_height="@dimen/dip_20"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/dip_5"
                    android:background="@drawable/vip_bg"
                    android:text="立即加入"
                    android:textColor="#E8C3A4"
                    android:textSize="@dimen/fond_12sp" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:text="会员权益"
            android:textColor="@color/min_color"
            android:textSize="@dimen/fond_12sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:textColor="#BBBBBB"
            android:textSize="@dimen/fond_12sp" />
    </LinearLayout>
</ScrollView>